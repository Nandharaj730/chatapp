<div class = 'col-sm-6 border rounded shadow bg-info' >
    <div class="card-header px-2 py-1 my-2 rounded shadow " style = 'background-color:lightgray;'>
            <h2 class="fw-light"> <%= @room.room_name if @room != nil %> 
    </div>

    <% if params[:room_id] != '0'%>    
        <div class = 'text-field shadow-lg rounded mb-2 px-3 py-2' style='background-color:lightgray; padding: 3px; min-height:500px;'>            
            <ul id = 'message-container' >
                <% @messages.each do |m| %>
                    <li class="list-group-item">
                        <p><b><%=     m.user.username %> :  </b>
                        <%=     m.context  %></p>
                    </li>
                <% end %> 
            </ul>
        </div>
    <% else %>
        <div class = 'text-center  shadow-lg rounded mb-2 px-3 py-2' style='background-color:lightgray; padding: 3px; min-height:500px;'>
            <span id="boot-icon" class="text-info bi bi-chat-left-text" style=" font-size:10rem">
            </span>
            <h2 class="fw-light"><b>  Welcome on Chat App <%= session[:user_name] %> </b></h2>
            <p class="fw-light" >Go chat with your friends !</p>
        </div>
    <% end %>
    <div class = 'col-12 '  >
        <%= render '/chatroom/form', message: @message %>
    </div>    
</div>
